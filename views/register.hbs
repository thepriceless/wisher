<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{> linkCommonCss}}
    <link href="/css/forms/login-form.css" rel="stylesheet">
    <link href="/css/forms/login-page.css" rel="stylesheet">
    <script src="/js/register-page.js"></script>
    <script src="/js/jwt-expiration-calculation.js"></script>
    <script src="/js/upload-buttons-decoration.js"></script>
    {{> linkCommonJs}}
    {{> websocketStatic}}
    <title>Sign up</title>
</head>
<body>
    <main class="body__main">
        <div class="wrapper-for-loader-height">
            <div class="loader-zone">
                <span class="upload-loader"></span>
            </div>
            <div class="form-wrap">
                <form class="form-items" onsubmit="signup(event)">
                    <input class="form-input lowercased-text-input" type="text" id="nickname" name="nickname" placeholder="Nickname" maxlength="25" required>
                    <input class="form-input capitalized-text-input" type="text" id="name" name="name" placeholder="Name" maxlength="25" required>
                    <input class="form-input capitalized-text-input" type="text" id="surname" name="surname" placeholder="Surname" maxlength="25" required>
                    <input class="form-input" type="password" id="password" name="password" placeholder="Password" maxlength="25" required>
                    <input type="file" class="image-input" id="photoLink" name="photoLink" accept=".jpg,.jpeg,.png" style="display: none;">
                    <button type="button" class="upload-photo-button">Upload profile photo</button>
                    <input class="submit-form-button" type="submit" value="Sign up">
                    <p id="dont-have-an-account">Already have an account?<br>
                        <a href="/auth/login">Login here</a>
                    </p>
                </form>
            </div>
        </div>
    </main>
    {{> footerAd}}
</body>
</html>